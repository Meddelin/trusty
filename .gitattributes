# Auto detect text files and perform LF normalization
* text=auto

# Dart source files
*.dart text eol=lf

# YAML files
*.yaml text eol=lf
*.yml text eol=lf

# Markdown files
*.md text eol=lf

# Config files
*.toml text eol=lf
*.json text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows specific
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.ico binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
